<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.masshow.presentation.ui.main.record.estimate.EstimateViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_alcohol_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_blur"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:onClick="@{() -> vm.cancelRecord()}"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="취소"
            android:textColor="#80FFFFFF"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@{vm.date}"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="#CCFFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="7월 16일 화요일" />

        <TextView
            android:id="@+id/btn_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="저장"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_announce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:lineSpacingExtra="4dp"
            android:text="마신 술은\n얼마나 만족스러웠나요?"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date" />


        <ImageView
            android:id="@+id/iv_estimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_estimate_ruler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_announce" />

        <TextView
            android:id="@+id/tv_awesome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="awesome"
            android:textColor="#909090"
            app:layout_constraintBottom_toTopOf="@id/tv_very_good"
            app:layout_constraintEnd_toStartOf="@id/iv_estimate"
            app:layout_constraintTop_toTopOf="@id/iv_estimate"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <TextView
            android:id="@+id/tv_very_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="very good!"
            android:textColor="#909090"
            app:layout_constraintBottom_toTopOf="@id/tv_good"
            app:layout_constraintEnd_toStartOf="@id/iv_estimate"
            app:layout_constraintTop_toBottomOf="@id/tv_awesome" />

        <TextView
            android:id="@+id/tv_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="good"
            android:textColor="#909090"
            app:layout_constraintBottom_toTopOf="@id/tv_not_bad"
            app:layout_constraintEnd_toStartOf="@id/iv_estimate"
            app:layout_constraintTop_toBottomOf="@id/tv_very_good" />

        <TextView
            android:id="@+id/tv_not_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="Not bad"
            android:textColor="#909090"
            app:layout_constraintBottom_toTopOf="@id/tv_umm"
            app:layout_constraintEnd_toStartOf="@id/iv_estimate"
            app:layout_constraintTop_toBottomOf="@id/tv_good" />

        <TextView
            android:id="@+id/tv_umm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="umm.."
            android:textColor="#909090"
            app:layout_constraintBottom_toTopOf="@id/tv_empty"
            app:layout_constraintEnd_toStartOf="@id/iv_estimate"
            app:layout_constraintTop_toBottomOf="@id/tv_not_bad" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_estimate"
            app:layout_constraintTop_toBottomOf="@id/tv_umm" />

        <ImageView
            android:id="@+id/iv_umm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_umm"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tv_umm"
            app:layout_constraintEnd_toStartOf="@id/tv_umm"
            app:layout_constraintTop_toTopOf="@id/tv_umm" />

        <ImageView
            android:id="@+id/iv_not_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_notbad"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tv_not_bad"
            app:layout_constraintEnd_toStartOf="@id/tv_not_bad"
            app:layout_constraintTop_toTopOf="@id/tv_not_bad" />

        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_good"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tv_good"
            app:layout_constraintEnd_toStartOf="@id/tv_good"
            app:layout_constraintTop_toTopOf="@id/tv_good" />

        <ImageView
            android:id="@+id/iv_very_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_verygood"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tv_very_good"
            app:layout_constraintEnd_toStartOf="@id/tv_very_good"
            app:layout_constraintTop_toTopOf="@id/tv_very_good" />

        <ImageView
            android:id="@+id/iv_awsome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_awesome"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tv_awesome"
            app:layout_constraintEnd_toStartOf="@id/tv_awesome"
            app:layout_constraintTop_toTopOf="@id/tv_awesome" />

        <View
            android:id="@+id/swipe_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#80FFC6AD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_swipable"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_estimate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_estimate" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/btn_text_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_next"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@drawable/btn_text_next"
            android:onClick="@{() -> vm.navigateToFoodRecord()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>