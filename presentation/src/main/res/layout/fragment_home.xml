<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/blank_sans"
            android:textColor="#B3FFFFFF"
            android:textSize="44dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nickname" />

        <ImageView
            android:id="@+id/tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/text_show"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nick" />

        <ImageView
            android:id="@+id/btn_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_lab"
            app:layout_constraintBottom_toBottomOf="@id/tv_nick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_nick" />

        <TextView
            android:id="@+id/btn_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rect_homebtn_off_50radius"
            android:fontFamily="@font/pretendard_semi_bold"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Card view"
            android:textColor="#66FCFCFC"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@id/btn_list_view"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_show" />

        <TextView
            android:id="@+id/btn_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_homebtn_on_50radius"
            android:fontFamily="@font/pretendard_semi_bold"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="List view"
            android:textColor="#FCFCFC"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_card_view"
            app:layout_constraintTop_toTopOf="@id/btn_card_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>